{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QueryResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "results"
  ],
  "properties": {
    "correlation_id": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "doc_id": {
      "type": "string"
    },
    "content_hash": {
      "type": "string"
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "doc_id",
          "score"
        ],
        "properties": {
          "doc_id": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "snippet": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          },
          "attribution": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "source_uri": {
                "type": "string"
              },
              "ingest_ts": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "backend": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}