{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceEvent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "ts",
    "action",
    "decision",
    "correlation_id"
  ],
  "properties": {
    "event_id": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "actor": {
      "type": "object"
    },
    "action": {
      "type": "string"
    },
    "decision": {
      "type": "string",
      "enum": [
        "allow",
        "deny",
        "error"
      ]
    },
    "correlation_id": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "input_hash": {
      "type": [
        "string",
        "null"
      ]
    },
    "output_hash": {
      "type": [
        "string",
        "null"
      ]
    },
    "policy_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "rule_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "notes": {
      "type": "string"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}